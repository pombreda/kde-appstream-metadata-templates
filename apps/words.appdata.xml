<?xml version="1.0" ?>
<component type="desktop">
  <id>words.desktop</id>
  <metadata_license>CC0-1.0</metadata_license>
  <name>Words</name>
  <summary>Word Processor</summary>
  <description>
    <p>Words is an intuitive word processor and desktop publisher application. With it, you can create informative and attractive documents with pleasure and ease.</p>
    <p>Features:</p>
    <ul>
      <li>Frame-based editing</li>
      <li>Allows embedding of Documents</li>
      <li>Customization of user interface</li>
      <li>Includes all features expected from a modern word processor</li>
      <li>ODT (Open Document Text) support</li>
    </ul>
  </description>
  <url type="homepage">http://www.calligra.org/words/</url>
  <url type="bugtracker">https://bugs.kde.org/enter_bug.cgi?format=guided&amp;product=words</url>
  <screenshots>
    <screenshot type="default">
      <image>http://kde.org/images/screenshots/words.png</image>
    </screenshot>
  </screenshots>
  <project_group>KDE</project_group>
  <provides>
    <binary>words</binary>
  </provides>
</component>
