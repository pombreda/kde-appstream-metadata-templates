<?xml version="1.0" ?>
<component type="desktop">
  <id>kruler.desktop</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-2.0+</project_license>
  <name>KRuler</name>
  <summary>Screen Ruler</summary>
  <description>
    <p>KRuler displays on screen a ruler measuring pixels.</p>
    <p>Features:</p>
    <ul>
      <li>Integrated color picker</li>
      <li>Change the length of the ruler</li>
      <li>Change the orientation of the ruler</li>
      <li>Change the color, transparency and font of the ruler</li>
    </ul>
  </description>
  <url type="bugtracker">https://bugs.kde.org/enter_bug.cgi?format=guided&amp;product=kruler</url>
  <url type="help">http://docs.kde.org/stable/en/kdegraphics/kruler/index.html</url>
  <screenshots>
    <screenshot type="default">
      <image>http://kde.org/images/screenshots/kruler.png</image>
    </screenshot>
  </screenshots>
  <project_group>KDE</project_group>
  <provides>
    <binary>kruler</binary>
  </provides>
</component>
