<?xml version="1.0" ?>
<component type="desktop">
  <id>kplayer.desktop</id>
  <metadata_license>CC0-1.0</metadata_license>
  <name>KPlayer</name>
  <summary>Media Player</summary>
  <description>
    <p>KPlayer is a rich multimedia player that uses the mplayer backend.</p>
    <p>Features:</p>
    <ul>
      <li>Playback of local file or URL</li>
      <li>Playback of DVD, VCD, audio CD; TV and DVB</li>
      <li>Full control of voume, brightness, etc.</li>
      <li>Status and progress display and seeking</li>
      <li>Library facility to organize your files or streams</li>
    </ul>
  </description>
  <url type="homepage">http://kplayer.sourceforge.net</url>
  <url type="bugtracker">https://bugs.kde.org/enter_bug.cgi?format=guided&amp;product=kplayer</url>
  <url type="help">http://docs.kde.org/development/en/extragear-multimedia/kplayer/index.html</url>
  <screenshots>
    <screenshot type="default">
      <image>http://kde.org/images/screenshots/kplayer.png</image>
    </screenshot>
  </screenshots>
  <project_group>KDE</project_group>
  <provides>
    <binary>kplayer</binary>
  </provides>
</component>
